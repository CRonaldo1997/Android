<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.c_ronaldo.myapplication_4.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:text="Nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nickName"
        android:layout_width="500dp"
        android:layout_height="38dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Input nickname here"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="30dp"
        android:text="Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="500dp"
        android:layout_height="38dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/nickName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="29dp"
        android:text="Country/State"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/countryStateTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="21dp"
        android:text="Set country/state"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/button"
        android:onClick="setCountryState"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="SET"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toRightOf="@+id/countryStateTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="30dp"
        android:text="City"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="500dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="input city here"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryStateTextView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="36dp"
        android:text="Year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="33dp"
        android:text="longitude"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/longtitudeText"
        android:layout_width="420dp"
        android:layout_height="37dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="input longtitude"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/yearSpinner" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="161dp"
        android:layout_height="38dp"
        android:layout_marginStart="126dp"
        android:onClick="postStudentInfo"
        android:text="sign up"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        android:layout_marginLeft="234dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:text="latitude"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/latitudeText"
        android:layout_width="420dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="input latitude"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longtitudeText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="37dp"
        android:onClick="onSetLongLatClicked"
        android:text="set"
        app:layout_constraintLeft_toRightOf="@+id/longtitudeText"
        app:layout_constraintTop_toBottomOf="@+id/yearSpinner" />

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="400dp"
        android:layout_height="23dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="34dp"
        android:text="email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="500dp"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="input email"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/latitudeText" />

    <EditText
        android:id="@+id/signInEmail"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:hint="input email to sign in"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@+id/password"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signInPsword"
        android:layout_width="352dp"
        android:layout_height="43dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="input password to sign in"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/signInEmail" />

    <Button
        android:id="@+id/signInButton"
        android:onClick="signInClicked"
        android:layout_width="161dp"
        android:layout_height="38dp"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="9dp"
        android:text="SIGN IN"
        app:layout_constraintLeft_toRightOf="@+id/longtitudeText"
        app:layout_constraintTop_toBottomOf="@+id/signInPsword" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In Here:"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginRight="228dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
