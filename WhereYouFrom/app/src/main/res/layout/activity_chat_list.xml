<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.c_ronaldo.myapplication_4.chatListActivity">

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="260dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/goMapButton"
        android:layout_width="1008dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="showMapClicked"
        android:text="show firebase users on map"
        app:layout_constraintTop_toBottomOf="@+id/chatListView"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp"
        android:text="Firebase Users List"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/historyListView"
        android:layout_width="260dp"
        android:layout_height="500dp"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="113dp"
        android:layout_marginTop="16dp"
        android:text="Chat List"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
